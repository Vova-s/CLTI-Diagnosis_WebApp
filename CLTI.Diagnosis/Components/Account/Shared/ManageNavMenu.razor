@using Microsoft.AspNetCore.Identity
@using CLTI.Diagnosis.Data

@inject SignInManager<ApplicationUser> SignInManager

<ul class="flex flex-col space-y-2">
    <li>
        <NavLink class="block px-4 py-2 rounded transition-colors duration-200 text-gray-700 hover:bg-blue-500 hover:text-white" href="Account/Manage" Match="NavLinkMatch.All">Profile</NavLink>
    </li>
    <li>
        <NavLink class="block px-4 py-2 rounded transition-colors duration-200 text-gray-700 hover:bg-blue-500 hover:text-white" href="Account/Manage/Email">Email</NavLink>
    </li>
    <li>
        <NavLink class="block px-4 py-2 rounded transition-colors duration-200 text-gray-700 hover:bg-blue-500 hover:text-white" href="Account/Manage/ChangePassword">Password</NavLink>
    </li>
    @if (hasExternalLogins)
    {
        <li>
            <NavLink class="block px-4 py-2 rounded transition-colors duration-200 text-gray-700 hover:bg-blue-500 hover:text-white" href="Account/Manage/ExternalLogins">External logins</NavLink>
        </li>
    }
    <li>
        <NavLink class="block px-4 py-2 rounded transition-colors duration-200 text-gray-700 hover:bg-blue-500 hover:text-white" href="Account/Manage/TwoFactorAuthentication">Two-factor authentication</NavLink>
    </li>
    <li>
        <NavLink class="block px-4 py-2 rounded transition-colors duration-200 text-gray-700 hover:bg-blue-500 hover:text-white" href="Account/Manage/PersonalData">Personal data</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
