@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<PageTitle>404 Page not Found</PageTitle>

<div class="flex items-center justify-center min-h-screen bg-gray-100 p-4">
    <div>
        <h1 class="text-4xl font-bold text-red-600 text-center mb-4">Error</h1>
        <h2 class="text-xl text-red-500 text-center mb-6">
            404 Page not Found
        </h2>

       @*  @if (ShowRequestId)
